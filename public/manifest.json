{
  "manifest_version": 3,
  "name": "MindfulGram â€“ use instagram mindfully. Newest",
  "description": "Hide what's distracting you on Instagram so you can focus on what matters.",
  "version": "1.0",
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "MindfulGram",
    "default_icon": "logo.png"
  },
  "permissions": [
    "scripting",
    "storage",
    "*://*.instagram.com/*"
  ],
  "host_permissions": [
    "*://*.instagram.com/*"
  ],
  "content_scripts": [
    {
      "js": ["background.js"],
      "css": ["main.css"],
      "matches": ["*://*.instagram.com/*"]
    }
  ]
}
